{
  "name": "environmental-monitoring-dashboard",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter api dev\" \"pnpm --filter web dev\"",
    "build": "pnpm --filter web build",
    "migrate": "pnpm --filter api migrate",
    "seed": "pnpm --filter api seed",
    "lint": "pnpm --filter \"*\" lint",
    "test": "pnpm --filter \"*\" test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}